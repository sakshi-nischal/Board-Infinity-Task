<% for(var i = 0; i < users.length; i++) { %>
<tr>
    <td><%= i+1%></td>
    <td><%= users[i].task_name%></td>
    <td><%= users[i].task_description%></td>
    <td><%= users[i].creater%></td>
    <td><%= users[i].duration%></td>
    <td><%= users[i].created_at%></td>
    <td>
        <a href="/update_task?id=<%= users[i]._id%>" class="btn border-shadow update">
            <span class="text-gradient"><i class="fas fa-pen-square"></i></span>
        </a>
        <a  class="btn border-shadow delete" data-id=<%= users[i]._id%>>
            <span class="text-gradient"><i class="fas fa-trash-alt"></i></span>
        </a>
    </td>

</tr>
<% } %>